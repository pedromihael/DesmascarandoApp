<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/dialog_title"
        android:textColor="@color/textNormal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/edit_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_title"
        android:layout_marginBottom="20dp"
        android:text="Horario"
        android:textColor="@color/textNormal"
        android:textSize="14sp"
        android:textStyle="italic" />

    <ImageView
        android:id="@+id/imagem_da_galeria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_brand"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/mask" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagem_da_galeria"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingVertical="20dp">

        <Button
            android:id="@+id/cancel_button"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="Cancelar"
            android:textColor="@color/negative_option" />

        <Button
            android:id="@+id/confirm_button"
            style="@android:style/Widget.Material.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:text="Adicionar"
            android:textColor="@drawable/button_ui_behaviour"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>